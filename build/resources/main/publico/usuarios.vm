#parse("publico/header.vm")

<div class="card m-auto mt-3" style="max-width: 80%">
    <div class="card-header">
        <h4 class="font-weight-normal ">Usuarios</h4>
    </div>
    <div class="card-body">
        <table class="table">
            <thead>
            <tr>
                <th >Usuario</th>
                <th >Nombre</th>
                <th >Rol</th>
                <th >Modificar Credenciales</th>
                <th >Eliminacion Usuarios</th>
            </tr>
            </thead>
            <tbody>
                #foreach($usuario in $usuarios)
                    <tr>
                        <td>$usuario.usuario</td>
                        <td>$usuario.nombre</td>
                        <td>$usuario.rol</td>

                        #if($usuario.rol != "ROLE_ADMIN")

                        <form action="/ascender/$usuario.idUsuario" method="post">
                            <td><button class="btn btn-warning" type="submit">Ascender Rol</button></td>
                        </form>
                        #end

                        #if($usuario.rol != "ROLE_ADMIN" && $usuario.nombre != "admin" && $usuario.usuario != $login.usuario)
                        <form action="/eliminar/$usuario.idUsuario" method="post">
                            <td><button class="btn btn-warning" type="submit">Eliminar usuario</button></td>
                        </form>
                        #end

                #end
                </tr>
            </tbody>
        </table>
    </div>
</div>


#parse("publico/footer.vm")
